#version 400
 
in vec3 VertexPosition;

uniform mat4 mViewProj;
uniform vec2 screenSize;
uniform vec3 color;

out vec3 volumePos;
out float radius;
 
void main() {
    vec4 viewPos = mViewProj*vec4(VertexPosition, 1.0);
    volumePos = viewPos.xyz;
    gl_Position = viewPos;
    gl_PointSize = 32/(2-viewPos.z);
}
